<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.HomeFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/linearbgcornerround"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/homecardimmage"
                android:layout_height="@dimen/_180sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="Total Earning"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/totalamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text=""
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </LinearLayout>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:drawableTint="@color/white"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/user_icon"
                    android:text="Agent Name "
                    android:textColor="@color/white" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Featured"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/textgrey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_80sdp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/grey"
                        android:id="@+id/dashboard"
                        android:layout_margin="@dimen/_5sdp"
                        android:elevation="0dp"
                        android:layout_height="@dimen/_80sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/dashboard_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dashboard"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/textgrey" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_80sdp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/grey"
                        android:id="@+id/openleads"
                        android:layout_margin="@dimen/_5sdp"
                        android:elevation="0dp"
                        android:layout_height="@dimen/_80sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/lead_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leads"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/textgrey" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_80sdp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/grey"
                        android:id="@+id/contactuscard"
                        android:layout_margin="@dimen/_5sdp"
                        android:elevation="0dp"
                        android:layout_height="@dimen/_80sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/contact_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contacts"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/textgrey" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_80sdp"
                        android:id="@+id/wallet"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/grey"
                        android:layout_margin="@dimen/_5sdp"
                        android:elevation="0dp"
                        android:layout_height="@dimen/_80sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wallet_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wallet"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/textgrey" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_80sdp"
                        android:id="@+id/referralcard"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/grey"
                        android:layout_margin="@dimen/_5sdp"
                        android:elevation="0dp"
                        android:layout_height="@dimen/_80sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/reference_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Referral"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/textgrey" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</layout>